<script>
function updateConfig() {
    let model = parseInt(document.getElementById("model").value);
    let colorSelect = document.getElementById("color");
    let strapSelect = document.getElementById("strap");

    let total = model + parseInt(colorSelect.value) + parseInt(strapSelect.value);
    document.getElementById("price").innerText = total;

    document.getElementById("watchVisual").style.background =
        colorSelect.options[colorSelect.selectedIndex].getAttribute("data-color");

    document.getElementById("strapVisual").style.background =
        strapSelect.options[strapSelect.selectedIndex].getAttribute("data-strap");
}

function sendOrder() {
    alert("Fonction de demande à connecter à votre email ou système de paiement.");
}
</script>

